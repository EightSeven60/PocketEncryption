<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.offlinepasswordmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OfflinePasswordManager"
        android:name=".PocketEncryptionApp">
        <activity
            android:name=".ui.AuthActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CreationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.TextEditActivity"
            android:exported="true" />
        <activity
            android:name=".ui.DebugActivity"
            android:exported="true" />
        <activity
            android:name=".ui.PrimaryActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>