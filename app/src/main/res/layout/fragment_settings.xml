<?xml version="1.0" encoding="utf-8"?>

<!-- All id's in this file should start with "set" to denote the fragment -->
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.SettingsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/setCurrentPwdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/setCurrentPwdET"
        android:text="@string/to_update_your_password_enter_your_current_password_here"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/setCurrentPwdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/setCurrentPwdET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textAlignment="textStart"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/setNewPwdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/setCurrentPwdET"
        android:text="@string/enter_your_new_password_here"
        android:textAlignment="center"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/setNewPwdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/setNewPwdET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textAlignment="textStart"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setUpdatePwdB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/update_password" />


</androidx.appcompat.widget.LinearLayoutCompat>